{
  "name": "typescript-ddd-template",
  "version": "0.1.0",
  "description": "Nodejs typescript starter project following DDD principles and best practices with docker setup ready to go",
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"{config,src,test}/**/*.ts\" --fix",
    "start": "node build/src/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "test": "NODE_ENV=test jest --verbose"
  },
  "keywords": [
    "node",
    "typescript",
    "ddd",
    "express",
    "api",
    "ioc",
    "docker"
  ],
  "author": "David del Puerto <code@daviddelpuerto.dev>",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "glob": "^8.0.3",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "morgan": "^1.10.0",
    "node-dependency-injection": "^3.0.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  }
}
